{
  "name": "@minimact/core",
  "version": "0.1.1",
  "description": "Client-side runtime for Minimact framework - Available in lightweight (SignalM) and full (SignalR) versions",
  "main": "dist/core.js",
  "module": "dist/core.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/core.esm.js",
      "require": "./dist/core.js",
      "default": "./dist/core.js"
    },
    "./r": {
      "types": "./dist/index-r.d.ts",
      "import": "./dist/core-r.esm.js",
      "require": "./dist/core-r.js",
      "default": "./dist/core-r.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "dev": "rollup -c -w",
    "test": "jest"
  },
  "keywords": [
    "minimact",
    "signalm",
    "signalr",
    "virtual-dom",
    "reactive",
    "dom-patching",
    "websocket",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/minimact/minimact.git"
  },
  "dependencies": {
    "@microsoft/signalr": "^8.0.0",
    "tslib": "^2.8.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "rimraf": "^6.0.1",
    "rollup": "^4.9.6",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.3.3"
  }
}
